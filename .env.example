# =============================================
# TELEGRAM TRADING BOT - ENVIRONMENT VARIABLES
# =============================================
# Copy this file to .env and fill in your values

# ================================
# TELEGRAM CONFIGURATION
# ================================
# Get these from https://my.telegram.org
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# Your Telegram phone number (with country code)
TELEGRAM_PHONE=+1234567890

# 2FA Password (leave empty if you don't have 2FA)
TELEGRAM_PASSWORD=

# Target group ID to monitor signals from
TELEGRAM_TARGET_GROUP=-1002451162402


# ================================
# WALLET PRIVATE KEYS
# ================================
# WARNING: Use dedicated trading wallets with limited funds!

# Solana wallet private key (base58 encoded)
SOLANA_PRIVATE_KEY=your_solana_private_key_here

# EVM wallet private key (hex, with or without 0x prefix)
# Same key works for ETH, BSC, Base, Arbitrum
EVM_PRIVATE_KEY=your_evm_private_key_here

# ================================
# RPC ENDPOINTS (Optional)
# ================================
# Leave empty to use public defaults
# For better reliability, use Alchemy/Infura/QuickNode

SOLANA_RPC_URL=
ETHEREUM_RPC_URL=
BSC_RPC_URL=
BASE_RPC_URL=
ARBITRUM_RPC_URL=

# ================================
# TRADING PARAMETERS
# ================================

# Percentage of capital to use per trade (0.05 = 5%)
TRADE_CAPITAL_PERCENT=0.05

# Maximum number of concurrent positions
MAX_POSITIONS=1

# Slippage tolerance (0.01 = 1%)
SLIPPAGE_TOLERANCE=0.01

# Price check interval in seconds
PRICE_CHECK_INTERVAL=10

# ================================
# OPERATIONAL SETTINGS
# ================================

# Set to true for testing (no real trades executed)
DRY_RUN=true

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log to file (leave empty to disable)
LOG_FILE=trading_bot.log
